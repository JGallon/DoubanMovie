<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:foreground="?android:attr/selectableItemBackground"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_item_search"
        android:layout_width="@dimen/search_image_width"
        android:layout_height="@dimen/search_image_height"
        android:layout_gravity="center_vertical"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:transitionName="@string/transition_name_movie_image"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_item_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_900"
            android:textSize="16sp"
            android:textStyle="bold"
            android:transitionName="@string/transition_name_movie_title"/>

        <TextView
            android:id="@+id/textView_item_search_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/md_grey_700" android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>